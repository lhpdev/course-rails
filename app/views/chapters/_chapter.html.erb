<div id="<%= dom_id chapter %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= chapter.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= chapter.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Type:</strong>
    <%= chapter.type %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Body:</strong>
    <%= chapter.body %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= chapter.user_id %>
  </p>

</div>
